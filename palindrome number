class Solution {
    public boolean isPalindrome(int x) {
        String s = String.valueOf(x);
        String d = "";
        boolean palindrome = false;
        for(int i = s.length()-1; i >= 0; i--){
            d += s.charAt(i);
        }
        if(d.equals(s)){
            palindrome = true;
        }
        else{
            palindrome = false;
        }
        return palindrome;
    }
}
